<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp">
        <RelativeLayout
            android:id="@+id/rl_"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="#34FCD21D"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:id="@+id/profile_teacher_pic"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp">
                <ImageView
                    android:id="@+id/imgProfileHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/profile_teacher_pic"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:id="@+id/txt_teachername"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/chat_try"
                android:layout_height="3dp"
                />
            <ProgressBar
                android:id="@+id/pbProcessing"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:layout_below="@id/txt_teachername"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="25dp"
                android:indeterminateOnly="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/my_bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bookmarks"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BookMarks"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_bookmark"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"

            >
            <ImageView
                android:id="@+id/my_course"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_file_copy_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Course"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_course"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/my_coding_course"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_computer_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coding"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_coding_course"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/chat_try"
            android:layout_height="3dp"
            android:layout_marginEnd="14dp"
            />
        <RelativeLayout
            android:id="@+id/rl_four"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            > <ImageView
            android:id="@+id/my_library"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_library_books_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_library"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/> </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_five"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_share_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/share"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/chat_try"
            android:layout_height="3dp"
            android:layout_marginEnd="14dp"
            />

        <RelativeLayout
            android:id="@+id/rl_six"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/contect_us"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_contact_page_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/contect_us"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_seven"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/about_us"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_contact_mail_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About us"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/about_us"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_eight"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:layout_marginTop="0dp"
            >
            <ImageView
                android:id="@+id/suggestion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_add_box_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestion"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/suggestion"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/chat_try"
            android:layout_height="3dp"
            />
        <TextView
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</ScrollView>