<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient_background"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_centerHorizontal="true"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp">
                <ImageView
                    android:src="@drawable/logo_transparant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"/>

            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtTeacherName"
                    android:layout_below="@+id/c1"
                   android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/kathai"
                    android:text="Teacher name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnSendRequest"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Send Request"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_gradient_background"
                    android:layout_below="@+id/txtTeacherName"/>

                <TextView
                    android:id="@+id/txtQualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnSendRequest"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="Highest qualification"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/txtCollegeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtQualification"
                    android:layout_centerHorizontal="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="College name"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/c2"
            android:layout_marginTop="15dp"
            android:id="@+id/c3"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/txtCity"
                    android:text="City"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/txtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/txtAddress"
                    android:text="Workshop Rd, Bhagalpur College Of Engineering, Bhagalpur, Bihar 813210, India,Bhagalpur"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/c3"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtClass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/kathai"
                    android:textStyle="bold"
                    android:text="11th to 12th"/>


                <TextView
                    android:id="@+id/txtTiming"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtClass"
                    android:textColor="@color/kathai"
                    android:textStyle="bold"
                    android:text="Timing"/>

                <TextView
                    android:id="@+id/txtLangauge"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtTiming"
                    android:textColor="@color/kathai"
                    android:textStyle="bold"
                    android:text="Langauge"/>

                <TextView
                    android:id="@+id/txtMode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtLangauge"
                    android:textColor="@color/kathai"
                    android:textStyle="bold"
                    android:text="Mode"/>

                <TextView
                    android:id="@+id/txtSubject"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_below="@+id/txtMode"
                    android:textColor="@color/kathai"
                    android:textStyle="bold"
                    android:text="Subject"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/txtSubject"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/kathai"
                    android:textStyle="italic"
                    android:text="Price range in â‚¹"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    
</ScrollView>
    
